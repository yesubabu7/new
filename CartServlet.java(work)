package demo;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class CartServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
	int m;

	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		HttpSession session = request.getSession();
		@SuppressWarnings("unchecked")
		List<String> cartItems = (List<String>) session.getAttribute("cartItems");

		if (cartItems == null) {
			cartItems = new ArrayList<>();
			session.setAttribute("cartItems", cartItems);
		}

		String action = request.getParameter("action");
		String product = request.getParameter("product");

		if (action != null) {
			m = 0;
			if (action.equals("add")) {
				if (product != null && !product.isEmpty()) {
					cartItems.add(product);
				}
			} else if (action.equals("remove")) {
				if (product != null && !product.isEmpty()) {
					cartItems.remove(product);
				}
			}
			m = 1;
		}

		if (action != null && action.equals("view")) {
			response.setContentType("text/html");
			response.setCharacterEncoding("UTF-8");
			response.getWriter().write("<h1>Cart Items</h1><ul>");
			for (String item : cartItems) {
				response.getWriter().write("<li>" + item + "<button class='remove-button' data-product='" + item
						+ "'>Remove</button></li>");
			}
			response.getWriter().write("</ul>");
		} else if (m != 1) {
			response.setContentType("text/plain");
			response.setCharacterEncoding("UTF-8");
			response.getWriter().write("Action not recognized.");
		}
	}
}
